<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverFragment">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/roundedBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_background"
        android:padding="16dp"
        android:elevation="8dp">

        <!-- Main Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Let's Pick Up People!"
            android:textColor="@color/textColor"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- Current Location Label -->
        <TextView
            android:id="@+id/tvCurrentLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:text="Current Location:"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Current Location Input -->
        <EditText
            android:id="@+id/editTextCurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCurrentLocationLabel"
            android:background="@drawable/rounded_corner"
            android:hint="Enter your current location"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:textColorHint="#7F000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Destination Label -->
        <TextView
            android:id="@+id/tvDestinationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextCurrentLocation"
            android:text="Destination:"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Destination Input -->
        <AutoCompleteTextView
            android:id="@+id/editTextDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDestinationLabel"
            android:background="@drawable/rounded_corner"
            android:hint="Enter your destination"
            android:padding="16dp"
            android:textColor="@color/textColor"
            android:textColorHint="#7F000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:popupBackground="@drawable/dropdown_background"
            />

        <!-- Passengers Label -->
        <TextView
            android:id="@+id/tvPassengersLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextDestination"
            android:text="Number Of Available Seats:"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Passengers Input -->
        <EditText
            android:id="@+id/editTextsSeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPassengersLabel"
            android:background="@drawable/rounded_corner"
            android:hint="Enter the number"
            android:padding="16dp"
            android:inputType="number"
            android:textColor="@color/textColor"
            android:textColorHint="#7F000000"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Comments Label -->
        <TextView
            android:id="@+id/tvCommentsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextsSeats"
            android:text="Comments for Passenger:"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <!-- Comments Input -->
        <EditText
            android:id="@+id/editTextComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCommentsLabel"
            android:background="@drawable/rounded_corner"
            android:hint="Enter comments for the passenger"
            android:padding="16dp"
            android:inputType="textMultiLine"
            android:textColor="@color/textColor"
            android:textColorHint="#7F000000"
            android:textSize="18sp" />

        <!-- Styled Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextComments"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2A2A2A"
            android:padding="16dp"
            android:text="Submit"
            android:textColor="@color/buttonColor"
            android:textSize="18sp" />

    </RelativeLayout>

</FrameLayout>